<!-- Headline Section -->
<section class="mb-6">
    <h2 class="text-2xl font-bold mb-4 bg-blue-100 p-4">Articles</h2>
    <% articles.forEach(article => { %>
      <div class="flex items-start mb-4 article-card bg-blue-100 p-4 rounded-lg">
        <img src="<%= article.image_url %>" alt="<%= article.title %>" class="w-24 h-24 object-cover rounded-fill mr-4">
        <div>
          <h3 class="text-xl font-semibold mb-1"><%= article.title %></h3>
          <p class="text-gray-600"><%= article.description %></p>
        </div>
      </div>
    <% }); %>
  </section>